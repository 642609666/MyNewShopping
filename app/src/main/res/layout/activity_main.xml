<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.atguigu.mynewshopping.MainActivity">

    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        ></RelativeLayout>

    <RadioGroup
        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home"
            style="@style/Main_radio"
            android:drawableTop="@drawable/main_home_selector"
            android:text="主页"
            />

        <RadioButton
            android:id="@+id/rb_type"
            style="@style/Main_radio"
            android:drawableTop="@drawable/main_type_selector"
            android:text="分页"
            />

        <RadioButton
            android:id="@+id/rb_communtiy"
            style="@style/Main_radio"
            android:drawableTop="@drawable/main_communtiy_selector"
            android:text="主题"
            />

        <RadioButton
            android:id="@+id/rb_cart"
            style="@style/Main_radio"
            android:drawableTop="@drawable/main_cart_selector"
            android:text="购物"
            />

        <RadioButton
            android:id="@+id/rb_user"
            style="@style/Main_radio"
            android:drawableTop="@drawable/main_user_selector"
            android:text="个人"
            />

    </RadioGroup>
</LinearLayout>
